@model MindBoxTest2.ViewModels.DeleteCategoryViewModel

@{
    ViewBag.Title = "Удалить категорию";
}

<div class="container custom text-custom justify-content-center" style="margin-top: 10%">
    <form asp-action="DeleteCategory" asp-controller="Home" asp-antiforgery="true">
        <div class="form-group text-center" style="margin-bottom: 25px">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.Page" />
        </div>
        <div class="form-group" style="margin-bottom: 25px">
            @for (int i = 0; i < Model.Selected.Count; i++)
            {
                <div class=" checkbox">
                    <input class="custom-checkbox text-center"
                           type="checkbox"
                           asp-for="@Model.Selected[i].IsChecked"
                           checked="@Model.Selected[i].IsChecked" />
                    <label asp-for="@Model.Selected[i].IsChecked">@Model.Selected[i].Name</label>
                </div>
                <div>
                    <input type="hidden" asp-for="@Model.Selected[i].Name" />
                    <input type="hidden" asp-for="@Model.Selected[i].Id" />
                </div>
            }
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Удалить" class="btn btn-danger btn-custom" />
            <a class="btn btn-outline-secondary btn-custom" asp-action="Index" asp-controller="Home" asp-route-page="@Model.Page">Назад</a>
        </div>
    </form>
</div>
